<?xml version="1.0" encoding="utf-8"?>
<!-- Officer Header - Similar to User header but with Officer info -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/officer_header"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:paddingTop="30dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- LEFT SIDE: Avatar + Badge -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="16dp">

            <!-- Avatar -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/officer_iv_avatar"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/avatar_facebook_mac_dinh_5"
                android:scaleType="centerCrop"
                android:contentDescription="Officer Profile"
                android:clickable="true"
                android:focusable="true"
                app:shapeAppearanceOverlay="@style/CircleImage" />

            <!-- Badge "NHÂN VIÊN" -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/officer_badge"
                android:textSize="8sp"
                android:textColor="#A5D6A7"
                android:textStyle="bold"
                android:background="@drawable/bg_uiname_rank_badge"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_marginTop="6dp" />

        </LinearLayout>

        <!-- RIGHT SIDE: Officer Info Card -->
        <LinearLayout
            android:id="@+id/officer_info_card_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/bg_uiname_balance_card"
            android:padding="10dp"
            android:maxWidth="280dp"
            android:clickable="true"
            android:focusable="true">

            <!-- Welcome Label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/officer_welcome"
                android:textSize="11sp"
                android:textColor="#A5D6A7"
                android:layout_marginBottom="6dp" />

            <!-- Officer Name -->
            <TextView
                android:id="@+id/officer_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhân viên"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#A5D6A7"
                android:layout_marginBottom="4dp" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/officer_subtitle"
                android:textSize="10sp"
                android:textColor="#A5D6A7" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

