<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0A1E0A">

    <!-- ============================================ -->
    <!-- TOP APP BAR (EDGE-TO-EDGE) -->
    <!-- Full width header with title and back arrow -->
    <!-- ============================================ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#1B5E20"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_revert"
            android:tint="#A5D6A7"
            android:contentDescription="Back"
            android:clickable="true"
            android:focusable="true"
            android:padding="6dp"
            android:layout_marginEnd="12dp" />

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lịch sử giao dịch"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <!-- ============================================ -->
    <!-- FILTER SECTION (Compact) -->
    <!-- Date range and transaction type filters -->
    <!-- ============================================ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#1A3A1A"
        android:padding="12dp"
        android:layout_marginBottom="8dp">

        <!-- Date Range -->
        <LinearLayout
            android:id="@+id/ll_date_range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="#0A1E0A"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_today"
                android:tint="#4CAF50"
                android:contentDescription="Date"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_date_range_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hôm nay"
                android:textSize="14sp"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/12/2024 - 18/12/2024"
                android:textSize="12sp"
                android:textColor="#A5D6A7"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/ic_menu_more"
                android:tint="#A5D6A7"
                android:rotation="90"
                android:contentDescription="Arrow" />
        </LinearLayout>

        <!-- Transaction Type Filter -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loại:"
                android:textSize="12sp"
                android:textColor="#A5D6A7"
                android:layout_marginEnd="8dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- All -->
                <TextView
                    android:id="@+id/tv_filter_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tất cả"
                    android:textSize="12sp"
                    android:textColor="#4CAF50"
                    android:textStyle="bold"
                    android:background="#0A1E0A"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Income -->
                <TextView
                    android:id="@+id/tv_filter_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thu nhập"
                    android:textSize="12sp"
                    android:textColor="#A5D6A7"
                    android:background="#0A1E0A"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Expense -->
                <TextView
                    android:id="@+id/tv_filter_expense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chi tiêu"
                    android:textSize="12sp"
                    android:textColor="#A5D6A7"
                    android:background="#0A1E0A"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- ============================================ -->
    <!-- TRANSACTION LIST (Scrollable) -->
    <!-- Main content area with transaction items -->
    <!-- ============================================ -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="16dp">

            <!-- ============================================ -->
            <!-- DATE GROUP: Today -->
            <!-- ============================================ -->
            <TextView
                android:id="@+id/tv_date_group_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hôm nay"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <!-- Transaction Item 1: Transfer (Expense) -->
            <LinearLayout
                android:id="@+id/ll_transaction_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#1A3A1A"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true">

                <!-- Transaction Icon -->
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_rotate"
                    android:background="#0A1E0A"
                    android:padding="8dp"
                    android:tint="#4CAF50"
                    android:contentDescription="Transfer"
                    android:layout_marginEnd="12dp" />

                <!-- Transaction Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chuyển tiền đến Nguyễn Văn B"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="REF001234567 • 12:45"
                        android:textSize="12sp"
                        android:textColor="#A5D6A7" />

                </LinearLayout>

                <!-- Amount & Status -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-5.000.000 ₫"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#F44336"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thành công"
                        android:textSize="11sp"
                        android:textColor="#4CAF50" />

                </LinearLayout>

            </LinearLayout>

            <!-- Transaction Item 2: Bill Payment (Expense) -->
            <LinearLayout
                android:id="@+id/ll_transaction_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#1A3A1A"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_view"
                    android:background="#0A1E0A"
                    android:padding="8dp"
                    android:tint="#4CAF50"
                    android:contentDescription="Bill"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thanh toán hóa đơn điện"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="REF001234568 • 10:30"
                        android:textSize="12sp"
                        android:textColor="#A5D6A7" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-2.500.000 ₫"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#F44336"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thành công"
                        android:textSize="11sp"
                        android:textColor="#4CAF50" />

                </LinearLayout>

            </LinearLayout>

            <!-- Transaction Item 3: Income (Salary) -->
            <LinearLayout
                android:id="@+id/ll_transaction_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#1A3A1A"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_add"
                    android:background="#0A1E0A"
                    android:padding="8dp"
                    android:tint="#4CAF50"
                    android:contentDescription="Income"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nhận lương tháng 12"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="REF001234569 • 08:00"
                        android:textSize="12sp"
                        android:textColor="#A5D6A7" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+15.000.000 ₫"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thành công"
                        android:textSize="11sp"
                        android:textColor="#4CAF50" />

                </LinearLayout>

            </LinearLayout>

            <!-- Divider -->
            <View
                android:id="@+id/view_divider_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#0A1E0A"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <!-- ============================================ -->
            <!-- DATE GROUP: Yesterday -->
            <!-- ============================================ -->
            <TextView
                android:id="@+id/tv_date_group_yesterday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hôm qua"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <!-- Transaction Item 4: Top-up (Expense) -->
            <LinearLayout
                android:id="@+id/ll_transaction_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#1A3A1A"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_call"
                    android:background="#0A1E0A"
                    android:padding="8dp"
                    android:tint="#4CAF50"
                    android:contentDescription="Top-up"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nạp tiền điện thoại"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="REF001234570 • 16:20"
                        android:textSize="12sp"
                        android:textColor="#A5D6A7" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-100.000 ₫"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#F44336"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thành công"
                        android:textSize="11sp"
                        android:textColor="#4CAF50" />

                </LinearLayout>

            </LinearLayout>

            <!-- Transaction Item 5: Transfer (Expense) -->
            <LinearLayout
                android:id="@+id/ll_transaction_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#1A3A1A"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_rotate"
                    android:background="#0A1E0A"
                    android:padding="8dp"
                    android:tint="#4CAF50"
                    android:contentDescription="Transfer"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chuyển tiền đến 9876543210"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="REF001234571 • 14:15"
                        android:textSize="12sp"
                        android:textColor="#A5D6A7" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-3.000.000 ₫"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#F44336"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thành công"
                        android:textSize="11sp"
                        android:textColor="#4CAF50" />

                </LinearLayout>

            </LinearLayout>

            <!-- Divider -->
            <View
                android:id="@+id/view_divider_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#0A1E0A"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <!-- ============================================ -->
            <!-- DATE GROUP: 16/12/2024 -->
            <!-- ============================================ -->
            <TextView
                android:id="@+id/tv_date_group_16dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16/12/2024"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <!-- Transaction Item 6: Income -->
            <LinearLayout
                android:id="@+id/ll_transaction_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#1A3A1A"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_add"
                    android:background="#0A1E0A"
                    android:padding="8dp"
                    android:tint="#4CAF50"
                    android:contentDescription="Income"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nhận chuyển khoản"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="REF001234572 • 11:30"
                        android:textSize="12sp"
                        android:textColor="#A5D6A7" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+8.000.000 ₫"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thành công"
                        android:textSize="11sp"
                        android:textColor="#4CAF50" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

