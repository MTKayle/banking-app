<?xml version="1.0" encoding="utf-8"?>
<!--
  Select Showtime - Light Mode (theo hình mẫu)
  UX: Chọn ngày + chọn rạp/thương hiệu + danh sách suất chiếu
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_select_showtime"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/movie_background_gray">

    <!-- TOP BAR -->
    <LinearLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/movie_text_primary" />

        <TextView
            android:id="@+id/tv_header_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="VUA CỦA CÁC VUA (T13)"
            android:textColor="@color/movie_text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- MAIN SCROLL CONTENT -->
    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_header"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/container_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- DATE SELECTOR SECTION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_date_section_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="CHỌN NGÀY CHIẾU"
                        android:textAllCaps="true"
                        android:textColor="@color/movie_text_primary"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <!-- Location Dropdown -->
                    <LinearLayout
                        android:id="@+id/layout_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_location"
                            app:tint="@color/movie_primary_green" />

                        <TextView
                            android:id="@+id/tv_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="Hồ Chí Minh"
                            android:textColor="@color/movie_primary_green"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_current_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Ngày chiếu: 18/12/2025"
                    android:textColor="@color/movie_text_secondary"
                    android:textSize="12sp" />

                <HorizontalScrollView
                    android:id="@+id/hsv_dates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/layout_dates"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Date Item 1 (Selected) -->
                        <LinearLayout
                            android:id="@+id/date_item_18"
                            android:layout_width="56dp"
                            android:layout_height="64dp"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bg_movie_date_light_active">

                            <TextView
                                android:id="@+id/tv_date_18_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="18"
                                android:textColor="@android:color/white"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_date_18_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="T5"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Date Item 2 -->
                        <LinearLayout
                            android:id="@+id/date_item_19"
                            android:layout_width="56dp"
                            android:layout_height="64dp"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bg_movie_date_light_inactive">

                            <TextView
                                android:id="@+id/tv_date_19_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="19"
                                android:textColor="@color/movie_text_primary"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_date_19_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="T6"
                                android:textColor="@color/movie_text_secondary"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Date Item 3 -->
                        <LinearLayout
                            android:id="@+id/date_item_20"
                            android:layout_width="56dp"
                            android:layout_height="64dp"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bg_movie_date_light_inactive">

                            <TextView
                                android:id="@+id/tv_date_20_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20"
                                android:textColor="@color/movie_text_primary"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_date_20_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="T7"
                                android:textColor="@color/movie_text_secondary"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Date Item 4 -->
                        <LinearLayout
                            android:id="@+id/date_item_21"
                            android:layout_width="56dp"
                            android:layout_height="64dp"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bg_movie_date_light_inactive">

                            <TextView
                                android:id="@+id/tv_date_21_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="21"
                                android:textColor="@color/movie_text_primary"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_date_21_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CN"
                                android:textColor="@color/movie_text_secondary"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Date Item 5 -->
                        <LinearLayout
                            android:id="@+id/date_item_22"
                            android:layout_width="56dp"
                            android:layout_height="64dp"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bg_movie_date_light_inactive">

                            <TextView
                                android:id="@+id/tv_date_22_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="22"
                                android:textColor="@color/movie_text_primary"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_date_22_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="T2"
                                android:textColor="@color/movie_text_secondary"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Date Item 6 -->
                        <LinearLayout
                            android:id="@+id/date_item_23"
                            android:layout_width="56dp"
                            android:layout_height="64dp"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bg_movie_date_light_inactive">

                            <TextView
                                android:id="@+id/tv_date_23_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="23"
                                android:textColor="@color/movie_text_primary"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_date_23_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="T3"
                                android:textColor="@color/movie_text_secondary"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Date Item 7 -->
                        <LinearLayout
                            android:id="@+id/date_item_24"
                            android:layout_width="56dp"
                            android:layout_height="64dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bg_movie_date_light_inactive">

                            <TextView
                                android:id="@+id/tv_date_24_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="24"
                                android:textColor="@color/movie_text_primary"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_date_24_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="T4"
                                android:textColor="@color/movie_text_secondary"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/movie_background_gray" />

            <!-- CINEMA BRAND FILTER SECTION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_brand_section_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CHỌN RẠP CHIẾU - SUẤT CHIẾU"
                    android:textAllCaps="true"
                    android:textColor="@color/movie_text_primary"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Vui lòng chọn rạp - suất chiếu"
                    android:textColor="@color/movie_text_secondary"
                    android:textSize="12sp" />

                <!-- Row 1: 4 brands -->
                <LinearLayout
                    android:id="@+id/layout_brand_row_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Favorite -->
                    <LinearLayout
                        android:id="@+id/brand_favorite"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_movie_brand_light"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_brand_favorite"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_heart_outline" />
                    </LinearLayout>

                    <!-- CGV -->
                    <LinearLayout
                        android:id="@+id/brand_cgv"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_movie_brand_light"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_brand_cgv"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_cgv" />
                    </LinearLayout>

                    <!-- LOTTE -->
                    <LinearLayout
                        android:id="@+id/brand_lotte"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_movie_brand_light"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_brand_lotte"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_lotte" />
                    </LinearLayout>

                    <!-- Beta -->
                    <LinearLayout
                        android:id="@+id/brand_beta"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_movie_brand_light"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_brand_beta"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_beta" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Row 2: 4 more brands -->
                <LinearLayout
                    android:id="@+id/layout_brand_row_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- BHD -->
                    <LinearLayout
                        android:id="@+id/brand_bhd"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_movie_brand_light"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BHD"
                            android:textColor="@color/movie_text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Cinestar -->
                    <LinearLayout
                        android:id="@+id/brand_cinestar"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_movie_brand_light"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cinestar"
                            android:textColor="@color/movie_text_primary"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Mega GS -->
                    <LinearLayout
                        android:id="@+id/brand_megags"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_movie_brand_light"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mega GS"
                            android:textColor="@color/movie_text_primary"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Empty placeholder -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/movie_background_gray" />

            <!-- CINEMA LIST SECTION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_cinema_section_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="DANH SÁCH RẠP ĐỀ XUẤT"
                        android:textAllCaps="true"
                        android:textColor="@color/movie_text_primary"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_cinema_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4 rạp chiếu"
                        android:textColor="@color/movie_text_secondary"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- CINEMA ITEMS CONTAINER - Populated dynamically -->
            <LinearLayout
                android:id="@+id/container_cinemas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingBottom="16dp"
                android:background="@color/white">

                <!-- Cinema items will be added dynamically from API -->
                
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>

