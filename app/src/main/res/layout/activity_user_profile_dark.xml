<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A1E0A"
    android:fillViewport="true">

    <!-- Main Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ============================================ -->
        <!-- PROFILE HEADER SECTION -->
        <!-- ============================================ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="24dp"
            android:paddingBottom="32dp">

            <!-- Circular Avatar -->
            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/avatar_facebook_mac_dinh_5"
                android:background="#1A3A1A"
                android:scaleType="centerCrop"
                android:contentDescription="User Avatar"
                android:layout_marginBottom="16dp" />

            <!-- User Full Name -->
            <TextView
                android:id="@+id/tv_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Văn A"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <!-- Customer ID -->
            <TextView
                android:id="@+id/tv_customer_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã khách hàng: KH123456789"
                android:textSize="14sp"
                android:textColor="#A5D6A7"
                android:layout_marginBottom="16dp" />

            <!-- eKYC Status Badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#1A3A1A"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginBottom="24dp">

                <View
                    android:id="@+id/view_ekyc_indicator"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="#4CAF50"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tv_ekyc_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã xác thực eKYC"
                    android:textSize="14sp"
                    android:textColor="#4CAF50"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Edit Profile Button -->
            <Button
                android:id="@+id/btn_edit_profile"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Chỉnh sửa hồ sơ"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="#2E7D32"
                android:padding="12dp"
                android:minHeight="48dp" />

        </LinearLayout>

        <!-- ============================================ -->
        <!-- PERSONAL INFORMATION CARD -->
        <!-- ============================================ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1A3A1A"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin cá nhân"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="20dp" />

            <!-- Phone Number -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Số điện thoại"
                    android:textSize="14sp"
                    android:textColor="#A5D6A7" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09** *** 5678"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Email"
                    android:textSize="14sp"
                    android:textColor="#A5D6A7" />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="user@example.com"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- National ID / CCCD -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CCCD/CMND"
                    android:textSize="14sp"
                    android:textColor="#A5D6A7" />

                <TextView
                    android:id="@+id/tv_national_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*** *** 123"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Address -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Địa chỉ"
                    android:textSize="14sp"
                    android:textColor="#A5D6A7" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123 Đường ABC, Quận XYZ, TP.HCM"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>

        </LinearLayout>

        <!-- ============================================ -->
        <!-- eKYC VERIFICATION HIGHLIGHT SECTION -->
        <!-- ============================================ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1A3A1A"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xác thực danh tính (eKYC)"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xác thực danh tính giúp bảo vệ tài khoản của bạn và cho phép sử dụng đầy đủ các tính năng ngân hàng trực tuyến một cách an toàn."
                android:textSize="14sp"
                android:textColor="#A5D6A7"
                android:lineSpacingMultiplier="1.3"
                android:layout_marginBottom="20dp" />

            <Button
                android:id="@+id/btn_start_ekyc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bắt đầu xác thực eKYC"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="#4CAF50"
                android:padding="14dp"
                android:minHeight="52dp" />

        </LinearLayout>

        <!-- ============================================ -->
        <!-- BANK ACCOUNT OVERVIEW CARD -->
        <!-- ============================================ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1A3A1A"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tài khoản ngân hàng"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="20dp" />

            <!-- Checking Account -->
            <LinearLayout
                android:id="@+id/ll_checking_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="#0A1E0A"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tài khoản thanh toán"
                        android:textSize="14sp"
                        android:textColor="#A5D6A7"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_checking_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="****1234"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_checking_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50,000,000 VNĐ"
                        android:textSize="14sp"
                        android:textColor="#4CAF50" />
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_more"
                    android:tint="#A5D6A7"
                    android:contentDescription="View Details" />
            </LinearLayout>

            <!-- Saving Account -->
            <LinearLayout
                android:id="@+id/ll_saving_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="#0A1E0A"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tài khoản tiết kiệm"
                        android:textSize="14sp"
                        android:textColor="#A5D6A7"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_saving_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="****5678"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_saving_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200,000,000 VNĐ"
                        android:textSize="14sp"
                        android:textColor="#4CAF50" />
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_more"
                    android:tint="#A5D6A7"
                    android:contentDescription="View Details" />
            </LinearLayout>

            <!-- Mortgage Account -->
            <LinearLayout
                android:id="@+id/ll_mortgage_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="#0A1E0A"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tài khoản vay"
                        android:textSize="14sp"
                        android:textColor="#A5D6A7"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_mortgage_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="****9012"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_mortgage_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Còn lại: 500,000,000 VNĐ"
                        android:textSize="14sp"
                        android:textColor="#FF9800" />
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_more"
                    android:tint="#A5D6A7"
                    android:contentDescription="View Details" />
            </LinearLayout>

        </LinearLayout>

        <!-- ============================================ -->
        <!-- SECURITY QUICK ACTIONS CARD -->
        <!-- ============================================ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1A3A1A"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bảo mật"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="20dp" />

            <!-- Change Login Password -->
            <LinearLayout
                android:id="@+id/ll_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="#0A1E0A"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Đổi mật khẩu đăng nhập"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_more"
                    android:tint="#A5D6A7"
                    android:contentDescription="Change Password" />
            </LinearLayout>

            <!-- Transaction PIN -->
            <LinearLayout
                android:id="@+id/ll_transaction_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="#0A1E0A"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mã PIN giao dịch"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_more"
                    android:tint="#A5D6A7"
                    android:contentDescription="Transaction PIN" />
            </LinearLayout>

            <!-- Biometric Authentication -->
            <LinearLayout
                android:id="@+id/ll_biometric_auth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="#0A1E0A"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Xác thực sinh trắc học"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_more"
                    android:tint="#A5D6A7"
                    android:contentDescription="Biometric Auth" />
            </LinearLayout>

        </LinearLayout>

        <!-- ============================================ -->
        <!-- BOTTOM ACTIONS -->
        <!-- ============================================ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp">

            <!-- View Transaction History -->
            <Button
                android:id="@+id/btn_transaction_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xem lịch sử giao dịch"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="#2E7D32"
                android:padding="14dp"
                android:minHeight="52dp"
                android:layout_marginBottom="16dp" />

            <!-- Logout Button (Destructive Action) -->
            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đăng xuất"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="#B71C1C"
                android:padding="14dp"
                android:minHeight="52dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

