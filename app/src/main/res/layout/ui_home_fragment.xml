<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/uihome_background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:paddingBottom="96dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipToPadding="false"
            android:clipChildren="false">

            <!-- Minimal MB Bank Style Header (Edge-to-Edge) -->
            <include layout="@layout/activity_home_header_mb_style" />

            <!-- Account Summary Card (Keep existing for now, can be removed if header includes it) -->
            <!-- <include layout="@layout/ui_home_view_account_card" /> -->

            <!-- Quick Actions (4 chức năng chính Dịch Vụ) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/uihome_card_bg">

                <include layout="@layout/ui_home_view_quick_actions" />
            </androidx.cardview.widget.CardView>

            <!-- Banner / Promo carousel ngay dưới khối Dịch Vụ -->
            <include layout="@layout/widget_carousel_v2" />

            <!-- Mua sắm - Giải trí - Đầu tư (các chức năng còn lại) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/uihome_card_bg">

                <include layout="@layout/ui_home_view_shopping" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation giống MB Bank: 4 chức năng -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/uihome_bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_gravity="bottom"
            android:layout_margin="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/uihome_bottom_nav_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Trang chủ -->
            <LinearLayout
                android:id="@+id/uihome_nav_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home"
                    android:tint="@android:color/white"
                    android:contentDescription="@string/dashboard" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dashboard"
                    android:textColor="@android:color/white"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- QR -->
            <LinearLayout
                android:id="@+id/uihome_nav_qr"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_qr_scanner"
                    android:tint="@android:color/white"
                    android:contentDescription="@string/qr_pay" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/qr_pay"
                    android:textColor="@android:color/white"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- Ưu đãi -->
            <LinearLayout
                android:id="@+id/uihome_nav_promo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_gift"
                    android:tint="@android:color/white"
                    android:contentDescription="@string/promotions" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/promotions"
                    android:textColor="@android:color/white"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- Thêm -->
            <LinearLayout
                android:id="@+id/uihome_nav_more"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_more"
                    android:tint="@android:color/white"
                    android:contentDescription="@string/more_services" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/more_services"
                    android:textColor="@android:color/white"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

