<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#102010"
        android:padding="12dp">

        <!-- Icon loại hóa đơn (dùng view tròn đơn giản) -->
        <View
            android:id="@+id/view_bill_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_bill_type_pill" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_bill_provider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EVN Hà Nội"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_bill_customer_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Mã KH: KH123456789"
                android:textColor="#A5D6A7"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_bill_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Kỳ: 11/2024"
                android:textColor="#A5D6A7"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_bill_paid_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="20/11/2024 10:15"
                android:textColor="#A5D6A7"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_bill_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.800.000 ₫"
                android:textColor="#4CAF50"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_bill_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Đã thanh toán"
                android:textColor="#A5D6A7"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>


