<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bidv_bg_light">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Success Icon -->
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/ic_check_circle"
                app:tint="@color/green_positive"
                android:contentDescription="Success" />

            <!-- Success Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Rút tiền thành công!"
                android:textColor="@color/green_positive"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Giao dịch của bạn đã được xử lý"
                android:textColor="@color/bidv_text_gray"
                android:textSize="14sp"
                android:gravity="center" />

            <!-- Card thông tin -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Số sổ -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số sổ tiết kiệm"
                        android:textColor="@color/bidv_text_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_saving_book_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="STK-20251222718"
                        android:textColor="@color/bidv_text_dark"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="16dp"
                        android:background="@color/bidv_divider" />

                    <!-- Tổng tiền nhận -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tổng tiền nhận"
                        android:textColor="@color/bidv_text_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_total_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="10.000.000 VNĐ"
                        android:textColor="@color/green_positive"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="16dp"
                        android:background="@color/bidv_divider" />

                    <!-- Tiền lãi -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tiền lãi"
                            android:textColor="@color/bidv_text_gray"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_interest_earned"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 VNĐ"
                            android:textColor="@color/bidv_accent"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="16dp"
                        android:background="@color/bidv_divider" />

                    <!-- Ngày rút -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ngày rút tiền"
                            android:textColor="@color/bidv_text_gray"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_withdraw_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="22/12/2025"
                            android:textColor="@color/bidv_text_dark"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="16dp"
                        android:background="@color/bidv_divider" />

                    <!-- Mã giao dịch -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Mã giao dịch"
                            android:textColor="@color/bidv_text_gray"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_transaction_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TXNjdnsjknsjknajsdnjasdakjsnd123456789"
                            android:maxWidth="100dp"
                            android:textColor="@color/bidv_text_dark"
                            android:textSize="14sp"
                            android:fontFamily="monospace" />
                    </LinearLayout>
                    
                    <!-- Tài khoản nhận tiền -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="16dp"
                        android:background="@color/bidv_divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tài khoản nhận"
                            android:textColor="@color/bidv_text_gray"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_checking_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5967568438"
                            android:textColor="@color/bidv_text_dark"
                            android:textSize="14sp"
                            android:fontFamily="monospace" />
                    </LinearLayout>
                    
                    <!-- Số dư mới -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="16dp"
                        android:background="@color/bidv_divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Số dư mới"
                            android:textColor="@color/bidv_text_gray"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_new_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="45.442.064 VNĐ"
                            android:textColor="@color/green_positive"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            
            <!-- Message cảnh báo (màu đỏ) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:backgroundTint="#FFEBEE">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⚠️"
                        android:textSize="20sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/tv_message"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tất toán trước hạn thành công. Lãi suất áp dụng: 0.2% (không kỳ hạn)"
                        android:textColor="@color/red_negative"
                        android:textSize="13sp"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Note -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Tiền đã được chuyển vào tài khoản thanh toán của bạn"
                android:textColor="@color/bidv_text_gray"
                android:textSize="13sp"
                android:gravity="center"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Button -->
    <Button
        android:id="@+id/btn_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/bidv_primary"
        android:text="Hoàn tất"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingVertical="14dp" />

</LinearLayout>
