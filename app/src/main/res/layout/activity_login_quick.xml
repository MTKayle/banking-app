<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/login_background"
        android:contentDescription="Background Image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Overlay for better readability -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:alpha="0.2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Main Card Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:padding="24dp"
        android:background="@drawable/bg_card_rounded"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5">


    <!-- Logo and Bank Name Row -->
            <LinearLayout
                android:id="@+id/ll_header"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- HAT Logo -->
                <ImageView
                    android:id="@+id/iv_hat_logo"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_hat_logo"
                    android:contentDescription="HAT Bank Logo"/>

                <!-- Bank Name HAT -->
                <TextView
                    android:id="@+id/tv_bank_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HAT"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:textColor="#6CCC71"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.1"/>
            </LinearLayout>

            <!-- Greeting Text -->
            <TextView
                android:id="@+id/tv_greeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Xin chào,"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/ll_header"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- User Name with Fingerprint Icon -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ll_user_name_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_greeting"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- User Name Text (can wrap to multiple lines) -->
                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text="Truong Duong Hung"
                    android:textSize="36sp"
                    android:textColor="#FFFFFF"
                    android:maxLines="3"
                    android:ellipsize="end"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <!-- Fingerprint Icon - aligned to bottom of text (last line) -->
                <ImageView
                    android:id="@+id/iv_fingerprint"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_fingerprint"
                    android:contentDescription="Fingerprint"
                    app:tint="#A5D6A7"
                    android:padding="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/fingerprint_button_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/tv_user_name"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Password Input Container -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/password_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ll_user_name_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Password Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    app:hintEnabled="false"
                    app:endIconMode="none"
                    app:boxBackgroundMode="none"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:hint="Mật khẩu"
                        android:inputType="textPassword"
                        android:maxLines="1"

                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"

                        android:paddingStart="0dp"
                        android:paddingLeft="0dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="7dp"

                        android:background="@android:color/transparent"/>
                </com.google.android.material.textfield.TextInputLayout>


                <!-- Bottom Border Line -->
                <View
                    android:id="@+id/password_border"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@android:color/white"
                    app:layout_constraintTop_toBottomOf="@id/til_password"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        <!-- Other Account and Forgot Password Links -->
            <LinearLayout
                android:id="@+id/ll_links"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/password_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tv_other_account"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tài khoản khác"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"/>

                <TextView
                    android:id="@+id/tv_forgot_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quên mật khẩu?"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"/>
            </LinearLayout>

            <!-- Login Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_login"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:text="Đăng nhập"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:cornerRadius="12dp"
                app:backgroundTint="#66BB6A"
                app:elevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/ll_links"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
