<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <!-- Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/face_authentication"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/primary_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Camera Preview Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_camera_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintDimensionRatio="3:4">

        <!-- Camera Preview -->
        <androidx.camera.view.PreviewView
            android:id="@+id/preview_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:scaleType="fillCenter"/>

        <!-- Face Detection Overlay -->
        <com.example.mobilebanking.views.FaceDetectionOverlay
            android:id="@+id/overlay_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <!-- Image Preview (shown after capture) -->
        <ImageView
            android:id="@+id/iv_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:visibility="gone"
            android:contentDescription="Ảnh đã chụp"/>
    </androidx.cardview.widget.CardView>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/cv_camera_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Status Text -->
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="@string/position_face"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:gravity="center"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@id/progress_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Instructions -->
    <TextView
        android:id="@+id/tv_instructions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="@string/face_scan_instructions"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Retry Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_retry"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="Thử lại"
        android:textSize="16sp"
        android:visibility="gone"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_instructions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Retake Button (shown after capture) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_retake"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="12dp"
        android:text="Chụp lại"
        android:textSize="16sp"
        android:visibility="gone"
        app:cornerRadius="8dp"
        app:strokeColor="@color/primary_color"
        app:strokeWidth="2dp"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:layout_constraintTop_toBottomOf="@id/tv_instructions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_use_this"/>

    <!-- Use This Button (shown after capture) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_use_this"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:text="Sử dụng ảnh này"
        android:textSize="16sp"
        android:visibility="gone"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_instructions"
        app:layout_constraintStart_toEndOf="@id/btn_retake"
        app:layout_constraintEnd_toStartOf="@id/btn_save_image"/>

    <!-- Save Image Button (shown after capture) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save_image"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="24dp"
        android:text="Lưu ảnh"
        android:textSize="16sp"
        android:visibility="gone"
        app:cornerRadius="8dp"
        app:strokeColor="@color/primary_color"
        app:strokeWidth="2dp"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:layout_constraintTop_toBottomOf="@id/tv_instructions"
        app:layout_constraintStart_toEndOf="@id/btn_use_this"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Cancel Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_cancel"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:text="@string/cancel"
        android:textSize="16sp"
        app:cornerRadius="8dp"
        app:strokeColor="@color/primary_color"
        app:strokeWidth="2dp"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:layout_constraintTop_toBottomOf="@id/tv_instructions"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
