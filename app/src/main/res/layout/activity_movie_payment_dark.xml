<?xml version="1.0" encoding="utf-8"?>
<!--
  Movie ticket payment screen (Dark Mode)
  UX: Ngân hàng xử lý thanh toán, rõ ràng thông tin vé + số tiền + tài khoản trích, có checkbox xác nhận.
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_movie_payment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bidv_background">

    <!-- SCROLLABLE CONTENT ABOVE STICKY BUTTON -->
    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_bottom_bar"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/container_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- TOP BAR -->
            <LinearLayout
                android:id="@+id/layout_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@android:color/transparent"
                    android:padding="4dp"
                    android:src="@drawable/ic_arrow_back" />

                <TextView
                    android:id="@+id/tv_header_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="Thanh toán vé xem phim"
                    android:textColor="@color/bidv_text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- CARD: MOVIE / SHOWTIME INFO -->
            <LinearLayout
                android:id="@+id/layout_movie_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:background="@drawable/bg_card_light_rounded"
                android:padding="16dp"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/tv_section_movie_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="THÔNG TIN VÉ"
                    android:textAllCaps="true"
                    android:textColor="@color/bidv_text_secondary"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_movie_title_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="VUA CỦA CÁC VUA (T13)"
                    android:textColor="@color/bidv_text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_cinema_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="CGV Sư Vạn Hạnh • Cinema 9"
                    android:textColor="@color/bidv_text_secondary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_showtime_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="23:20 • 18/12/2025"
                    android:textColor="@color/bidv_text_secondary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_seats_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Ghế: H12"
                    android:textColor="@color/bidv_text_primary"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- CARD: PAYMENT ACCOUNT (UI ONLY) -->
            <LinearLayout
                android:id="@+id/layout_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:background="@drawable/bg_card_light_rounded"
                android:padding="16dp"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/tv_section_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TÀI KHOẢN THANH TOÁN"
                    android:textAllCaps="true"
                    android:textColor="@color/bidv_text_secondary"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_account_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Thanh toán từ tài khoản"
                    android:textColor="@color/bidv_text_secondary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_account_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="1234 5678 9999"
                    android:textColor="@color/bidv_text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_account_balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Số dư khả dụng: 10.000.000đ"
                    android:textColor="@color/bidv_text_secondary"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- CARD: AMOUNT & PROMO -->
            <LinearLayout
                android:id="@+id/layout_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:background="@drawable/bg_card_light_rounded"
                android:padding="16dp"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/tv_section_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SỐ TIỀN THANH TOÁN"
                    android:textAllCaps="true"
                    android:textColor="@color/bidv_text_secondary"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_ticket_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Vé xem phim (1)"
                        android:textColor="@color/bidv_text_primary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_ticket_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="110.500đ"
                        android:textColor="@color/bidv_text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Promo code (UI only) -->
                <LinearLayout
                    android:id="@+id/layout_promo"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_promo_code"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_input_light_rounded"
                        android:paddingHorizontal="14dp"
                        android:hint="Nhập mã giảm giá (nếu có)"
                        android:textColor="@color/bidv_text_primary"
                        android:textColorHint="@color/bidv_text_secondary"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btn_apply_promo"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_button_secondary_rounded"
                        android:text="Áp dụng"
                        android:textAllCaps="false"
                        android:textColor="@color/bidv_text_primary"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_total_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Tổng tiền thanh toán"
                    android:textColor="@color/bidv_text_secondary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_total_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="110.500đ"
                    android:textColor="#0EB378"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- TERMS CHECKBOX -->
            <LinearLayout
                android:id="@+id/layout_terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="top">

                <CheckBox
                    android:id="@+id/cb_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#0EB378" />

                <TextView
                    android:id="@+id/tv_terms_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:text="Tôi xác nhận thông tin trên đã chính xác và đồng ý với điều khoản &amp; chính sách."
                    android:textColor="@color/bidv_text_primary"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- STICKY BOTTOM BUTTON -->
    <LinearLayout
        android:id="@+id/layout_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:background="@color/card_background"
        android:elevation="8dp">

        <Button
            android:id="@+id/btn_confirm_payment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_button_primary_rounded"
            android:enabled="false"
            android:text="Thanh toán"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>


