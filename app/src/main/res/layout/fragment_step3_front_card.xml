<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Chụp hình CCCD"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Instruction -->
        <TextView
            android:id="@+id/tv_instruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Vui lòng chụp ảnh mặt trước của thẻ CCCD. Đảm bảo ảnh rõ ràng, đủ ánh sáng và không bị mờ."
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Image Preview -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_image_preview"
            android:layout_width="0dp"
            android:layout_height="190dp"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="1.5dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:clipToOutline="true"
            app:layout_constraintTop_toBottomOf="@id/tv_instruction"
            app:layout_constraintStart_toStartOf="@+id/tv_instruction"
            app:layout_constraintEnd_toEndOf="@+id/tv_instruction">

            <ImageView
                android:id="@+id/iv_front_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:background="@drawable/rounded_image_background"
                android:clipToOutline="true"
                android:contentDescription="Ảnh mặt trước thẻ CCCD"/>
        </androidx.cardview.widget.CardView>
        
        <!-- Back Card Image Preview (shown after back card is captured) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_back_image_preview"
            android:layout_width="0dp"
            android:layout_height="190dp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="1.5dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:clipToOutline="true"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/cv_image_preview"
            app:layout_constraintStart_toStartOf="@+id/tv_instruction"
            app:layout_constraintEnd_toEndOf="@+id/tv_instruction">

            <ImageView
                android:id="@+id/iv_back_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:background="@drawable/rounded_image_background"
                android:clipToOutline="true"
                android:contentDescription="Ảnh mặt sau thẻ CCCD"/>
        </androidx.cardview.widget.CardView>
        
        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/cv_back_image_preview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Auto Scan Button (changes text based on state) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_auto_scan"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:text="Chụp mặt trước CCCD"
            android:textSize="16sp"
            app:cornerRadius="8dp"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/progress_bar"/>

        <!-- Save Image Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save_image"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:text="Lưu ảnh chân dung"
            android:textSize="16sp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="8dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/btn_capture"/>

        <!-- Continue Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:text="Tiếp tục"
            android:textSize="16sp"
            app:cornerRadius="8dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/btn_save_image"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

