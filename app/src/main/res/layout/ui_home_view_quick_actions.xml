<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:padding="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/services"
        android:textColor="@color/uihome_text_primary"
        android:textStyle="bold"
        android:textSize="14sp"
        android:paddingBottom="2dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="1"
        android:useDefaultMargins="false">

        <!-- 1) Chuyển tiền -->
        <androidx.cardview.widget.CardView
            android:id="@+id/uihome_action_transfer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_transfer"
                    android:tint="@color/uihome_primary"
                    android:contentDescription="@string/transfer" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/transfer"
                    android:textColor="@color/uihome_text_primary"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="1dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 2) Thanh toán hóa đơn -->
        <androidx.cardview.widget.CardView
            android:id="@+id/uihome_action_bill"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_bill"
                    android:tint="@color/uihome_primary"
                    android:contentDescription="@string/bill_payment" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bill_payment"
                    android:textColor="@color/uihome_text_primary"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="1dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 3) Vay -->
        <androidx.cardview.widget.CardView
            android:id="@+id/uihome_action_loan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_lock"
                    android:tint="@color/uihome_primary"
                    android:contentDescription="@string/loans" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/loans"
                    android:textColor="@color/uihome_text_primary"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="1dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 4) Tìm chi nhánh -->
        <androidx.cardview.widget.CardView
            android:id="@+id/uihome_action_locations"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_location"
                    android:tint="@color/uihome_primary"
                    android:contentDescription="@string/branch_locator" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/branch_locator"
                    android:textColor="@color/uihome_text_primary"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="1dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>
</LinearLayout>

