<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background gradient -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_qr_gradient" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_back_arrow"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nhận tiền"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center" />

            <ImageView
                android:id="@+id/btn_help"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/ic_help_outline"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@android:color/white"
                android:contentDescription="Help" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Thông tin tài khoản -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="STK nhận tiền"
                            android:textColor="#B3FFFFFF"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_account_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="0839256305"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_copy"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:padding="6dp"
                        android:src="@drawable/ic_copy"
                        app:tint="@android:color/white"
                        android:background="@drawable/bg_circle_white_alpha"
                        android:contentDescription="Copy" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngân hàng"
                        android:textColor="#B3FFFFFF"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="HAT Bank - Ngân Hàng Công Nghệ HAT"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- QR Code Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingTop="28dp"
                        android:paddingBottom="24dp"
                        android:paddingHorizontal="24dp">

                        <!-- Tên chủ tài khoản -->
                        <TextView
                            android:id="@+id/tv_account_holder_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TRUONG DUONG HUNG"
                            android:textColor="#1B5E20"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <!-- Số TK ẩn với toggle -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="16dp">

                            <TextView
                                android:id="@+id/tv_masked_account"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*******305"
                                android:textColor="#757575"
                                android:textSize="15sp"
                                android:letterSpacing="0.08" />

                            <ImageView
                                android:id="@+id/iv_toggle_mask"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:layout_marginStart="10dp"
                                android:src="@drawable/ic_eye_open"
                                app:tint="#757575"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="Toggle" />
                        </LinearLayout>

                        <!-- Logo ngân hàng -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginBottom="16dp">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_hat_logo"
                                android:scaleType="fitCenter"
                                android:contentDescription="HAT Logo" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="25dp"
                                android:layout_marginHorizontal="12dp"
                                android:background="#E0E0E0" />

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="40dp"
                                android:src="@drawable/vietqr"
                                android:scaleType="fitCenter"
                                android:contentDescription="VietQR Logo" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="25dp"
                                android:layout_marginHorizontal="12dp"
                                android:background="#E0E0E0" />

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="40dp"
                                android:src="@drawable/napas"
                                android:scaleType="fitCenter"
                                android:contentDescription="NAPAS Logo" />
                        </LinearLayout>

                        <!-- QR Code với border màu -->
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_qr_frame"
                            android:padding="4dp">

                            <ImageView
                                android:id="@+id/iv_qr_code"
                                android:layout_width="240dp"
                                android:layout_height="240dp"
                                android:padding="16dp"
                                android:background="@drawable/bg_qr_rounded"
                                android:scaleType="fitCenter"
                                android:contentDescription="QR Code" />
                        </FrameLayout>

                        <!-- Button Thêm số tiền - Text only -->
                        <TextView
                            android:id="@+id/btn_add_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="+ Thêm số tiền"
                            android:textColor="#1B5E20"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground" />

                        <!-- Display Amount and Message (Hidden by default) -->
                        <LinearLayout
                            android:id="@+id/layout_qr_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_qr_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="500,000 VND"
                                android:textColor="#1B5E20"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:paddingBottom="2dp"
                                android:background="@drawable/bg_underline_green" />

                            <TextView
                                android:id="@+id/tv_qr_message"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Chuyển tiền"
                                android:textColor="#666666"
                                android:textSize="14sp"
                                android:visibility="gone" />
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- 3 Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingVertical="28dp">

                    <LinearLayout
                        android:id="@+id/btn_download"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="10dp"
                        android:background="?attr/selectableItemBackground">

                        <FrameLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/bg_action_button_white">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_download"
                                app:tint="#1B5E20"
                                android:contentDescription="Download" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Tải xuống"
                            android:textColor="@android:color/white"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_customize"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="10dp"
                        android:background="?attr/selectableItemBackground">

                        <FrameLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/bg_action_button_white">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_setting_avatar"
                                app:tint="#1B5E20"
                                android:contentDescription="Customize" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Tuỳ chỉnh"
                            android:textColor="@android:color/white"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_share"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="10dp"
                        android:background="?attr/selectableItemBackground">

                        <FrameLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/bg_action_button_white">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_share"
                                app:tint="#1B5E20"
                                android:contentDescription="Share" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Chia sẻ"
                            android:textColor="@android:color/white"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>
