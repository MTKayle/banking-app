<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:background="@color/uihome_card_bg">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_transfer"
            android:tint="@color/uihome_primary"
            android:contentDescription="@string/recent_transactions" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/uihome_txn_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chuyển tiền đến 9876543210"
                android:textColor="@color/uihome_text_primary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/uihome_txn_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REF001234567 • 12:45  |  Hôm nay"
                android:textColor="@color/uihome_text_secondary"
                android:textSize="12sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/uihome_txn_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-5.000.000₫"
            android:textColor="@color/uihome_primary"
            android:textStyle="bold"
            android:textSize="14sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>

