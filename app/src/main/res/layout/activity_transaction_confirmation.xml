<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F7FA">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="@string/back"
            app:tint="@color/primary_color"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Xác nhận thông tin"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_color"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_edit"
            android:contentDescription="Edit"
            app:tint="#FFD700"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card chính -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Số tiền giao dịch -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số tiền giao dịch"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10,000 VNĐ"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_color"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tv_amount_in_words"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mười nghìn Việt Nam Đồng"
                        android:textSize="13sp"
                        android:textColor="#888888"
                        android:layout_marginBottom="24dp"/>

                    <!-- Người chuyển -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Người chuyển"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="24dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="#E0E0E0">

                            <ImageView
                                android:id="@+id/iv_from_bank_logo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="8dp"
                                android:src="@drawable/ic_bank_logo"
                                android:contentDescription="Bank logo"
                                app:tint="@color/primary_color"/>

                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:id="@+id/tv_from_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TRUONG DUONG HUNG"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:layout_marginBottom="2dp"/>

                            <TextView
                                android:id="@+id/tv_from_account"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0839256305"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:layout_marginBottom="2dp"/>

                            <TextView
                                android:id="@+id/tv_from_bank"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ngân hàng công nghệ HAT"
                                android:textSize="13sp"
                                android:textColor="#888888"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Người nhận -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Người nhận"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="24dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="#E0E0E0"
                            app:cardBackgroundColor="@android:color/white">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="8dp"
                                android:src="@drawable/ic_bank_logo"
                                android:contentDescription="Bank logo"
                                app:tint="@color/primary_color"/>

                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:id="@+id/tv_to_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TRUONG DUONG HUNG"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:layout_marginBottom="2dp"/>

                            <TextView
                                android:id="@+id/tv_to_account"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="18074191"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:layout_marginBottom="2dp"/>

                            <TextView
                                android:id="@+id/tv_to_bank"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ngân hàng TMCP Á Châu"
                                android:textSize="13sp"
                                android:textColor="#888888"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Nội dung chuyển tiền -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Nội dung chuyển tiền"
                            android:textSize="14sp"
                            android:textColor="#666666"/>

                        <TextView
                            android:id="@+id/tv_note"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="TRUONG DUONG HUNG chuyen tien"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:textAlignment="textEnd"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <!-- Phí giao dịch -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Phí giao dịch"
                            android:textSize="14sp"
                            android:textColor="#666666"/>

                        <TextView
                            android:id="@+id/tv_fee"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Miễn phí"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:textAlignment="textEnd"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <!-- Hình thức chuyển tiền -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Hình thức chuyển tiền"
                            android:textSize="14sp"
                            android:textColor="#666666"/>

                        <TextView
                            android:id="@+id/tv_transfer_type"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Chuyển nhanh"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:textAlignment="textEnd"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Warning box -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFF9E6"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="start">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_warning"
                        android:layout_marginEnd="12dp"
                        android:layout_marginTop="2dp"
                        app:tint="#FFA000"
                        android:contentDescription="Warning"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Vui lòng kiểm tra chính xác thông tin trước khi xác nhận giao dịch."
                        android:textSize="14sp"
                        android:textColor="#8B6500"
                        android:lineSpacingExtra="2dp"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="4dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="Quay lại"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="26dp"
            android:layout_marginEnd="8dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:strokeColor="@color/primary_color"
            android:textColor="@color/primary_color"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="Xác nhận"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="26dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/primary_color"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</LinearLayout>

