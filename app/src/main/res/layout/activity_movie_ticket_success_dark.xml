<?xml version="1.0" encoding="utf-8"?>
<!-- Simple ticket success screen after movie payment -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_movie_ticket_success"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101418"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/layout_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_ticket"
            android:tint="#0EB378" />

        <TextView
            android:id="@+id/tv_success_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Thanh toán thành công"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_success_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Vé xem phim đã được tạo. Thông tin sẽ có trong mục &quot;Vé của tôi&quot;."
            android:textColor="#B0BAC5"
            android:textSize="13sp"
            android:gravity="center" />

        <LinearLayout
            android:id="@+id/layout_ticket_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:background="#181D22"
            android:padding="12dp">

            <TextView
                android:id="@+id/tv_movie_title_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VUA CỦA CÁC VUA (T13)"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_cinema_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="CGV Sư Vạn Hạnh • Cinema 9"
                android:textColor="#CED4DF"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_time_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="23:20 • 18/12/2025"
                android:textColor="#CED4DF"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_seats_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Ghế: H12"
                android:textColor="#E2E7F0"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_back_home"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="#0EB378"
        android:text="Về trang chủ"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>


