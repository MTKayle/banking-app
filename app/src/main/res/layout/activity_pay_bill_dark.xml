<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A1E0A"
    android:fillViewport="true">

    <!-- Main Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ============================================ -->
        <!-- HEADER SECTION (EDGE-TO-EDGE) -->
        <!-- Full-width header with title and subtitle -->
        <!-- ============================================ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1B5E20"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanh toán hóa đơn"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điện &amp; Nước"
                android:textSize="16sp"
                android:textColor="#A5D6A7" />

        </LinearLayout>

        <!-- ============================================ -->
        <!-- BILL TYPE SELECTION SECTION -->
        <!-- Two large cards for Electricity and Water -->
        <!-- ============================================ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn loại hóa đơn"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp" />

            <!-- Bill Type Cards Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Electricity Card -->
                <LinearLayout
                    android:id="@+id/ll_bill_electricity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#1A3A1A"
                    android:padding="14dp"
                    android:layout_marginEnd="6dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/download"
                        android:scaleType="centerCrop"
                        android:contentDescription="Electricity"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Điện"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

                <!-- Water Card -->
                <LinearLayout
                    android:id="@+id/ll_bill_water"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#1A3A1A"
                    android:padding="14dp"
                    android:layout_marginStart="6dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/images"
                        android:scaleType="centerCrop"
                        android:contentDescription="Water"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nước"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- ============================================ -->
        <!-- CUSTOMER INFORMATION SECTION -->
        <!-- Input field for customer code / contract number -->
        <!-- ============================================ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin khách hàng"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="12dp" />

            <!-- Customer Code Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã khách hàng / Số hợp đồng"
                    android:textSize="14sp"
                    android:textColor="#A5D6A7"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/et_customer_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="52dp"
                    android:hint="Nhập mã khách hàng"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#666666"
                    android:background="#1A3A1A"
                    android:padding="14dp"
                    android:inputType="text"
                    android:maxLines="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã khách hàng được in trên hóa đơn"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- ============================================ -->
        <!-- BILL DETAILS PREVIEW SECTION -->
        <!-- Display bill information (placeholder) -->
        <!-- ============================================ -->
        <LinearLayout
            android:id="@+id/ll_bill_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1A3A1A"
            android:padding="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chi tiết hóa đơn"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp" />

            <!-- Provider Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nhà cung cấp"
                    android:textSize="14sp"
                    android:textColor="#A5D6A7" />

                <TextView
                    android:id="@+id/tv_provider_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EVN Hà Nội"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <!-- Billing Period -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kỳ thanh toán"
                    android:textSize="14sp"
                    android:textColor="#A5D6A7" />

                <TextView
                    android:id="@+id/tv_billing_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/2024"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <!-- Amount Due (Highlighted) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="#0A1E0A">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Số tiền phải thanh toán"
                    android:textSize="14sp"
                    android:textColor="#A5D6A7" />

                <TextView
                    android:id="@+id/tv_amount_due"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.500.000 ₫"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50" />

            </LinearLayout>

            <!-- Due Date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hạn thanh toán"
                    android:textSize="14sp"
                    android:textColor="#A5D6A7" />

                <TextView
                    android:id="@+id/tv_due_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25/12/2024"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <!-- Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Trạng thái"
                    android:textSize="14sp"
                    android:textColor="#A5D6A7" />

                <TextView
                    android:id="@+id/tv_bill_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chưa thanh toán"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FF9800" />

            </LinearLayout>

        </LinearLayout>

        <!-- ============================================ -->
        <!-- PAYMENT ACCOUNT SELECTION SECTION -->
        <!-- Show source account for payment -->
        <!-- ============================================ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1A3A1A"
            android:padding="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tài khoản thanh toán"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp" />

            <!-- Account Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#0A1E0A"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tài khoản thanh toán"
                    android:textSize="13sp"
                    android:textColor="#A5D6A7"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_account_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="****1234"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số dư khả dụng:"
                    android:textSize="13sp"
                    android:textColor="#A5D6A7"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tv_available_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50.000.000 ₫"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50" />

            </LinearLayout>

        </LinearLayout>

        <!-- ============================================ -->
        <!-- ACTION BUTTONS SECTION -->
        <!-- Check Bill, Pay Now, Cancel buttons -->
        <!-- ============================================ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp">

            <!-- Check Bill Button -->
            <Button
                android:id="@+id/btn_check_bill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tra cứu hóa đơn"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="#2E7D32"
                android:padding="14dp"
                android:minHeight="52dp"
                android:layout_marginBottom="12dp" />

            <!-- Pay Now Button -->
            <Button
                android:id="@+id/btn_pay_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thanh toán ngay"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="#4CAF50"
                android:padding="14dp"
                android:minHeight="52dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone" />

            <!-- Cancel Button -->
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hủy"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="#1A3A1A"
                android:padding="14dp"
                android:minHeight="52dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

