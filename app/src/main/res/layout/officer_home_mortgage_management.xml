<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="5dp"
    android:padding="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mortgage_management"
        android:textColor="@color/uihome_text_primary"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginStart="24dp"
        android:paddingBottom="8dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="1"
        android:useDefaultMargins="false">

        <!-- 1) Tạo khoản vay -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/officer_action_mortgage_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_vaytien"
                        app:tint="#4CAF50"
                        android:contentDescription="@string/mortgage_create" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mortgage_create"
                android:textColor="@color/uihome_text_primary"
                android:textSize="10sp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:maxLines="2"
                android:includeFontPadding="false"
                android:lineSpacingExtra="1dp" />
        </LinearLayout>

        <!-- 2) Quản lý duyệt (gộp chờ duyệt + phê duyệt) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/officer_action_mortgage_pending_approve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_check_circle"
                        app:tint="#4CAF50"
                        android:contentDescription="@string/mortgage_pending_approve" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mortgage_pending_approve"
                android:textColor="@color/uihome_text_primary"
                android:textSize="10sp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:maxLines="2"
                android:includeFontPadding="false"
                android:lineSpacingExtra="1dp" />
        </LinearLayout>

        <!-- 3) Quản lý lãi suất vay -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/officer_action_mortgage_interest_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_percent"
                        app:tint="#4CAF50"
                        android:contentDescription="Quản lý lãi suất vay" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lãi suất vay"
                android:textColor="@color/uihome_text_primary"
                android:textSize="10sp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:maxLines="2"
                android:includeFontPadding="false"
                android:lineSpacingExtra="1dp" />
        </LinearLayout>

    </GridLayout>
</LinearLayout>

