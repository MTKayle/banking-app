<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E8F5E9">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- HEADER with Gradient -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_settings_header_gradient"
                android:paddingTop="48dp"
                android:paddingBottom="32dp"
                android:paddingHorizontal="16dp">

                <!-- Logout Button -->
                <LinearLayout
                    android:id="@+id/btn_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_logout_button"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thoát"
                        android:textColor="#E53935"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="4dp"
                        android:src="@drawable/ic_logout" />
                </LinearLayout>

                <!-- Avatar -->
                <FrameLayout
                    android:id="@+id/layout_avatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="24dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_avatar_circle" />

                    <ImageView
                        android:id="@+id/iv_avatar"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_setting_avatar"
                        android:scaleType="centerInside" />
                </FrameLayout>

                <!-- Greeting -->
                <TextView
                    android:id="@+id/tv_greeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_avatar"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:text="Chào buổi chiều!"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <!-- User Name -->
                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_greeting"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="NGUYỄN VĂN A"
                    android:textColor="#1B5E20"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <!-- Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- SECTION 1: Cài đặt cá nhân -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <!-- Section Header -->
                    <LinearLayout
                        android:id="@+id/header_personal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Cài đặt cá nhân"
                            android:textColor="#1A1A1A"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/iv_expand_personal"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_expand_arrow"
                            android:rotation="180"
                            app:tint="#666666" />
                    </LinearLayout>

                    <!-- Section Content -->
                    <LinearLayout
                        android:id="@+id/content_personal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_settings_section_card"
                        android:elevation="2dp"
                        android:padding="8dp">

                        <!-- Item: Đổi ảnh đại diện -->
                        <LinearLayout
                            android:id="@+id/item_avatar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="@drawable/bg_settings_item_ripple"
                            android:clickable="true"
                            android:focusable="true">

                            <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_icon_circle_light">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_setting_avatar" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:text="Đổi ảnh đại diện"
                                android:textColor="#1A1A1A"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <!-- Item: Đổi giao diện -->
                        <LinearLayout
                            android:id="@+id/item_theme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="@drawable/bg_settings_item_ripple"
                            android:clickable="true"
                            android:focusable="true">

                            <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_icon_circle_light">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_setting_theme" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:text="Đổi giao diện"
                                android:textColor="#1A1A1A"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <!-- Item: Đổi ảnh nền -->
                        <LinearLayout
                            android:id="@+id/item_wallpaper"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="@drawable/bg_settings_item_ripple"
                            android:clickable="true"
                            android:focusable="true">

                            <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_icon_circle_light">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_setting_wallpaper" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:text="Đổi ảnh nền"
                                android:textColor="#1A1A1A"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <!-- Item: Ngôn ngữ -->
                        <LinearLayout
                            android:id="@+id/item_language"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="@drawable/bg_settings_item_ripple"
                            android:clickable="true"
                            android:focusable="true">

                            <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_icon_circle_light">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_setting_language" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:text="Ngôn ngữ"
                                android:textColor="#1A1A1A"
                                android:textSize="15sp" />

                            <!-- VN Badge -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:background="@drawable/bg_language_badge"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="4dp">

                                <View
                                    android:layout_width="16dp"
                                    android:layout_height="12dp"
                                    android:background="#DA251D"
                                    android:layout_marginEnd="6dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="VN"
                                    android:textColor="#1A1A1A"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Item: SmartWatch -->
                        <LinearLayout
                            android:id="@+id/item_watch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="@drawable/bg_settings_item_ripple"
                            android:clickable="true"
                            android:focusable="true">

                            <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_icon_circle_light">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_setting_watch" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:text="SmartWatch"
                                android:textColor="#1A1A1A"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- SECTION 2: Cài đặt An toàn - Bảo mật -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="80dp">

                    <!-- Section Header -->
                    <LinearLayout
                        android:id="@+id/header_security"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Cài đặt An toàn - Bảo mật"
                            android:textColor="#1A1A1A"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/iv_expand_security"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_expand_arrow"
                            android:rotation="180"
                            app:tint="#666666" />
                    </LinearLayout>

                    <!-- Section Content -->
                    <LinearLayout
                        android:id="@+id/content_security"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_settings_section_card"
                        android:elevation="2dp"
                        android:padding="8dp">

                        <!-- Item: Cài đặt sinh trắc học -->
                        <LinearLayout
                            android:id="@+id/item_biometric"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="@drawable/bg_settings_item_ripple"
                            android:clickable="true"
                            android:focusable="true">

                            <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_icon_circle_light">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_setting_biometric" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:text="Cài đặt sinh trắc học"
                                android:textColor="#1A1A1A"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <!-- Item: Cài đặt vân tay -->
                        <LinearLayout
                            android:id="@+id/item_fingerprint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="@drawable/bg_settings_item_ripple"
                            android:clickable="true"
                            android:focusable="true">

                            <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_icon_circle_light">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_setting_biometric" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:text="Cài đặt vân tay"
                                android:textColor="#1A1A1A"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <!-- Item: Cài đặt Smart OTP -->
                        <LinearLayout
                            android:id="@+id/item_otp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="@drawable/bg_settings_item_ripple"
                            android:clickable="true"
                            android:focusable="true">

                            <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_icon_circle_light">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_setting_otp" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:text="Cài đặt Smart OTP"
                                android:textColor="#1A1A1A"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <!-- Item: Cài đặt đăng nhập -->
                        <LinearLayout
                            android:id="@+id/item_login"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="@drawable/bg_settings_item_ripple"
                            android:clickable="true"
                            android:focusable="true">

                            <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_icon_circle_light">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_setting_login" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:text="Cài đặt đăng nhập"
                                android:textColor="#1A1A1A"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <!-- Item: Đổi mật khẩu -->
                        <LinearLayout
                            android:id="@+id/item_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="@drawable/bg_settings_item_ripple"
                            android:clickable="true"
                            android:focusable="true">

                            <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_icon_circle_light">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_setting_password" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:text="Đổi mật khẩu"
                                android:textColor="#1A1A1A"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation giống trang chủ: 4 chức năng -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/uihome_bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_gravity="bottom"
            android:layout_margin="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/uihome_bottom_nav_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Trang chủ -->
            <LinearLayout
                android:id="@+id/nav_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home"
                    app:tint="@android:color/white"
                    android:contentDescription="Trang chu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trang chủ"
                    android:textColor="@android:color/white"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- QR -->
            <LinearLayout
                android:id="@+id/nav_qr"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_qr_scanner"
                    app:tint="@android:color/white"
                    android:contentDescription="Quet QR" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quét QR"
                    android:textColor="@android:color/white"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- Thẻ -->
            <LinearLayout
                android:id="@+id/nav_card"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_card"
                    app:tint="@android:color/white"
                    android:contentDescription="The" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thẻ"
                    android:textColor="@android:color/white"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- Hồ sơ (active) -->
            <LinearLayout
                android:id="@+id/nav_settings"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_person"
                    app:tint="@android:color/white"
                    android:contentDescription="Ho so" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hồ sơ"
                    android:textColor="@android:color/white"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
