<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:id="@+id/layout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_card_white">

        <!-- Header Row: Period + Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Current Period Indicator -->
            <View
                android:id="@+id/view_current_badge"
                android:layout_width="4dp"
                android:layout_height="24dp"
                android:background="@color/primary"
                android:layout_marginEnd="8dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_current_indicator"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="@color/primary"
                android:layout_marginEnd="4dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_period_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kỳ 1"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/uihome_text_primary" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHỜ THANH TOÁN"
                android:textSize="11sp"
                android:textStyle="bold"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/bg_status_pending" />

        </LinearLayout>

        <!-- Due Date -->
        <TextView
            android:id="@+id/tv_due_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hạn: 15/01/2025"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Total Payment -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tổng thanh toán"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/uihome_text_primary" />

            <TextView
                android:id="@+id/tv_total_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.000.000 đ"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary" />

        </LinearLayout>

        <!-- Penalty Row (only visible when overdue) -->
        <LinearLayout
            android:id="@+id/layout_penalty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_warning"
                app:tint="#D32F2F"
                android:layout_marginEnd="6dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lãi phạt quá hạn"
                android:textSize="13sp"
                android:textColor="#D32F2F" />

            <TextView
                android:id="@+id/tv_penalty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+500.000 đ"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#D32F2F" />

        </LinearLayout>

        <!-- Details Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <!-- Principal Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gốc"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tv_principal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.000.000 đ"
                    android:textSize="13sp"
                    android:textColor="@color/uihome_text_primary"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Interest Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lãi"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tv_interest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.000.000 đ"
                    android:textSize="13sp"
                    android:textColor="@color/uihome_text_primary"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Remaining Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dư nợ còn lại"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tv_remaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="96.000.000 đ"
                    android:textSize="13sp"
                    android:textColor="@color/uihome_text_primary"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Paid Date Row (only visible when paid) -->
        <LinearLayout
            android:id="@+id/layout_paid_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_check"
                app:tint="#4CAF50"
                android:layout_marginEnd="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã thanh toán ngày: "
                android:textSize="12sp"
                android:textColor="#4CAF50" />

            <TextView
                android:id="@+id/tv_paid_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10/01/2025"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#4CAF50" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
