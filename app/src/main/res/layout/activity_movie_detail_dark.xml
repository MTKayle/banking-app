<?xml version="1.0" encoding="utf-8"?>
<!--
  Screen 2 – Movie Detail (Dark Mode)
  UX: Poster + key meta on top, detailed info below, sticky "Đặt vé" button as clear next step.
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_movie_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101418">

    <!-- MAIN CONTENT SCROLL -->
    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_bottom_bar"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/container_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- HEADER: back + title -->
            <LinearLayout
                android:id="@+id/layout_header_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@android:color/transparent"
                    android:padding="4dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_arrow_back" />

                <TextView
                    android:id="@+id/tv_header_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="Chi tiết phim"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- POSTER + BASIC INFO -->
            <LinearLayout
                android:id="@+id/layout_poster_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_movie_poster"
                    android:layout_width="120dp"
                    android:layout_height="168dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_banner_1" />

                <LinearLayout
                    android:id="@+id/layout_basic_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_movie_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="VUA CỦA CÁC VUA (T13)"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:maxLines="2"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/tv_movie_genre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Gia đình, Hoạt hình"
                        android:textColor="#B0BAC5"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:id="@+id/layout_meta_row"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:background="#182028"
                            android:text="101 phút"
                            android:textColor="#E2E7F0"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_age_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="4dp"
                            android:background="#F2C94C"
                            android:text="T13"
                            android:textColor="#1A1A1A"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/chip_format_2d"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="4dp"
                            android:background="#182028"
                            android:text="2D"
                            android:textColor="#E2E7F0"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/chip_format_3d"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="4dp"
                            android:background="#182028"
                            android:text="3D"
                            android:textColor="#E2E7F0"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- DESCRIPTION -->
            <TextView
                android:id="@+id/tv_section_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="NỘI DUNG"
                android:textAllCaps="true"
                android:textColor="#9EA7B3"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_movie_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Khi một bộ phim hoạt hình Hàn Quốc viết lại lịch sử phòng vé toàn cầu bằng câu chuyện từ Kinh Thánh... "
                android:textColor="#E2E7F0"
                android:textSize="13sp"
                android:maxLines="4"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tv_read_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Đọc thêm"
                android:textColor="#0EB378"
                android:textSize="13sp" />

            <!-- TECHNICAL INFO -->
            <TextView
                android:id="@+id/tv_section_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="THÔNG TIN PHIM"
                android:textAllCaps="true"
                android:textColor="#9EA7B3"
                android:textSize="13sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/layout_director"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Đạo diễn"
                    android:textColor="#B0BAC5"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_director"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Seong-ho Jang"
                    android:textColor="#E2E7F0"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_actors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Diễn viên"
                    android:textColor="#B0BAC5"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_actors"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Mark Hamill, Pierce Brosnan, Roman Griffin Davis"
                    android:textColor="#E2E7F0"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ngôn ngữ"
                    android:textColor="#B0BAC5"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_language"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Tiếng Anh - Phụ đề Tiếng Việt, Lồng tiếng Việt"
                    android:textColor="#E2E7F0"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_release_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Khởi chiếu"
                    android:textColor="#B0BAC5"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_release_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="12/12/2025"
                    android:textColor="#E2E7F0"
                    android:textSize="13sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- STICKY BOTTOM ACTION -->
    <LinearLayout
        android:id="@+id/layout_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:background="#151A20">

        <Button
            android:id="@+id/btn_book_now"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_button_primary_rounded"
            android:text="Đặt vé"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>


