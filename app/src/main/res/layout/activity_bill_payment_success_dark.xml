<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A1E0A"
    android:fillViewport="true">

    <!-- Main Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ============================================ -->
        <!-- SUCCESS HEADER SECTION -->
        <!-- Success icon and message -->
        <!-- ============================================ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:layout_marginTop="32dp">

            <!-- Success Icon (Checkmark Circle) -->
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/bg_button_primary_rounded"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✓"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <!-- Success Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanh toán thành công"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <!-- Success Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giao dịch đã được xử lý"
                android:textSize="14sp"
                android:textColor="#A5D6A7" />

        </LinearLayout>

        <!-- ============================================ -->
        <!-- BILL INFORMATION CARD -->
        <!-- Details of the paid bill -->
        <!-- ============================================ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_dark_rounded"
            android:padding="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin hóa đơn"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp" />

            <!-- Provider Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nhà cung cấp"
                    android:textSize="14sp"
                    android:textColor="#A5D6A7" />

                <TextView
                    android:id="@+id/tv_provider_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EVN Hà Nội"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <!-- Bill Type -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Loại hóa đơn"
                    android:textSize="14sp"
                    android:textColor="#A5D6A7" />

                <TextView
                    android:id="@+id/tv_bill_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Điện"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <!-- Customer Code -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mã khách hàng"
                    android:textSize="14sp"
                    android:textColor="#A5D6A7" />

                <TextView
                    android:id="@+id/tv_customer_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KH123456789"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <!-- Billing Period -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kỳ thanh toán"
                    android:textSize="14sp"
                    android:textColor="#A5D6A7" />

                <TextView
                    android:id="@+id/tv_billing_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/2024"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <!-- Amount Paid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Số tiền đã thanh toán"
                    android:textSize="14sp"
                    android:textColor="#A5D6A7" />

                <TextView
                    android:id="@+id/tv_amount_paid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.500.000 ₫"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:textColor="#4CAF50" />

            </LinearLayout>

        </LinearLayout>

        <!-- ============================================ -->
        <!-- TRANSACTION DETAILS CARD -->
        <!-- Transaction ID, time, account, status -->
        <!-- ============================================ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_dark_rounded"
            android:padding="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chi tiết giao dịch"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp" />

            <!-- Transaction ID -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mã giao dịch"
                    android:textSize="14sp"
                    android:textColor="#A5D6A7" />

                <TextView
                    android:id="@+id/tv_transaction_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REF123456789"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <!-- Transaction Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Thời gian"
                    android:textSize="14sp"
                    android:textColor="#A5D6A7" />

                <TextView
                    android:id="@+id/tv_transaction_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18/12/2024 14:30:25"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <!-- Payment Account -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tài khoản thanh toán"
                    android:textSize="14sp"
                    android:textColor="#A5D6A7" />

                <TextView
                    android:id="@+id/tv_payment_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="****1234"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <!-- Payment Method -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Phương thức"
                    android:textSize="14sp"
                    android:textColor="#A5D6A7" />

                <TextView
                    android:id="@+id/tv_payment_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chuyển khoản"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <!-- Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Trạng thái"
                    android:textSize="14sp"
                    android:textColor="#A5D6A7" />

                <TextView
                    android:id="@+id/tv_transaction_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thành công"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50" />

            </LinearLayout>

        </LinearLayout>

        <!-- ============================================ -->
        <!-- ACCOUNT BALANCE UPDATE CARD -->
        <!-- Before / After balance -->
        <!-- ============================================ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_dark_rounded"
            android:padding="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cập nhật số dư"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp" />

            <!-- Before Balance -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Số dư trước"
                    android:textSize="14sp"
                    android:textColor="#A5D6A7" />

                <TextView
                    android:id="@+id/tv_balance_before"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50.000.000 ₫"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <!-- Amount Deducted -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Số tiền thanh toán"
                    android:textSize="14sp"
                    android:textColor="#A5D6A7" />

                <TextView
                    android:id="@+id/tv_amount_deducted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-2.500.000 ₫"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#F44336" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#0A1E0A"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <!-- After Balance -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Số dư sau"
                    android:textSize="14sp"
                    android:textColor="#A5D6A7" />

                <TextView
                    android:id="@+id/tv_balance_after"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="47.500.000 ₫"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50" />

            </LinearLayout>

        </LinearLayout>

        <!-- ============================================ -->
        <!-- ACTION BUTTONS SECTION -->
        <!-- View details, Back to home -->
        <!-- ============================================ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp">

            <!-- View Transaction Details Button -->
            <Button
                android:id="@+id/btn_view_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xem chi tiết giao dịch"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_button_primary_rounded"
                android:padding="0dp"
                android:minHeight="52dp"
                android:layout_marginBottom="12dp" />

            <!-- Back to Home Button -->
            <Button
                android:id="@+id/btn_back_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Về trang chủ"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_button_secondary_rounded"
                android:padding="0dp"
                android:minHeight="52dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

