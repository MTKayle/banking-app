<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_welcome_gradient">

    <!-- Step progress indicator: 1 - 5 -->
    <LinearLayout
        android:id="@+id/ll_step_indicator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="23dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/step_circle_1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/step_circle_active" />

        <View
            android:id="@+id/step_line_1_2"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_marginHorizontal="0dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/step_circle_2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="2"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/step_circle_inactive" />

        <View
            android:id="@+id/step_line_2_3"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_marginHorizontal="0dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/step_circle_3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="3"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/step_circle_inactive" />

        <View
            android:id="@+id/step_line_3_4"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_marginHorizontal="0dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/step_circle_4"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="4"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/step_circle_inactive" />

        <!-- Step 5 removed - only 4 steps now -->

    </LinearLayout>

    <!-- ViewPager2 with registration steps -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/ll_step_indicator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TabLayout still present for TabLayoutMediator (kept hidden) -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:visibility="gone"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabIndicatorHeight="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


