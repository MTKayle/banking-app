<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bidv_bg_light">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_back"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Success Icon -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/ic_check_circle_success"
                app:tint="@color/bidv_success" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Thanh toán thành công!"
                android:textColor="@color/bidv_success"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Giao dịch của bạn đã được xử lý"
                android:textColor="@color/bidv_text_gray"
                android:textSize="14sp"
                android:gravity="center" />

            <!-- Thông tin giao dịch -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông tin giao dịch"
                        android:textColor="@color/bidv_text_dark"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="12dp"
                        android:background="@color/bidv_divider" />

                    <!-- Số tài khoản vay -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Số tài khoản vay"
                            android:textColor="@color/bidv_text_gray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_mortgage_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MTG202512224112"
                            android:textColor="@color/bidv_text_dark"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Kỳ đã thanh toán -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Kỳ đã thanh toán"
                            android:textColor="@color/bidv_text_gray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_period_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kỳ 4"
                            android:textColor="@color/bidv_text_dark"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Số tiền đã thanh toán -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Số tiền đã thanh toán"
                            android:textColor="@color/bidv_text_gray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_payment_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15.010.281 đ"
                            android:textColor="@color/red_negative"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Tài khoản thanh toán -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tài khoản thanh toán"
                            android:textColor="@color/bidv_text_gray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_payment_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5967568438"
                            android:textColor="@color/bidv_text_dark"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Số dư còn lại -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Dư nợ còn lại"
                            android:textColor="@color/bidv_text_gray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_remaining_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="144.742.692 đ"
                            android:textColor="@color/bidv_primary"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Button quay lại -->
    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:text="Quay lại tài khoản vay"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_button_rounded_green"
        android:paddingVertical="14dp" />

</RelativeLayout>
