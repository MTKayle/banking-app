<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0A1E0A">

    <!-- ============================================ -->
    <!-- HEADER SECTION -->
    <!-- Title and close button (if used as overlay) -->
    <!-- ============================================ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#1B5E20"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lọc theo ngày"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <!-- Close button (optional, for overlay mode) -->
        <ImageView
            android:id="@+id/iv_close_filter"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="#A5D6A7"
            android:contentDescription="Đóng"
            android:clickable="true"
            android:focusable="true"
            android:padding="6dp" />

    </LinearLayout>

    <!-- ============================================ -->
    <!-- QUICK DATE OPTIONS SECTION -->
    <!-- Predefined date ranges for quick selection -->
    <!-- ============================================ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn nhanh"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#A5D6A7"
            android:layout_marginBottom="12dp" />

        <!-- Quick Options Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Row 1: Today & Last 7 days -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- Today -->
                <LinearLayout
                    android:id="@+id/ll_option_today"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#1A3A1A"
                    android:padding="16dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hôm nay"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_option_today_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18/12/2024"
                        android:textSize="12sp"
                        android:textColor="#A5D6A7" />

                </LinearLayout>

                <!-- Last 7 days -->
                <LinearLayout
                    android:id="@+id/ll_option_last_7_days"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#1A3A1A"
                    android:padding="16dp"
                    android:layout_marginStart="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7 ngày qua"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_option_last_7_days_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12/12 - 18/12"
                        android:textSize="12sp"
                        android:textColor="#A5D6A7" />

                </LinearLayout>

            </LinearLayout>

            <!-- Row 2: This month & Last month -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- This month -->
                <LinearLayout
                    android:id="@+id/ll_option_this_month"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#1A3A1A"
                    android:padding="16dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tháng này"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_option_this_month_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01/12 - 18/12"
                        android:textSize="12sp"
                        android:textColor="#A5D6A7" />

                </LinearLayout>

                <!-- Last month -->
                <LinearLayout
                    android:id="@+id/ll_option_last_month"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#1A3A1A"
                    android:padding="16dp"
                    android:layout_marginStart="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tháng trước"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_option_last_month_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01/11 - 30/11"
                        android:textSize="12sp"
                        android:textColor="#A5D6A7" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0A1E0A"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- ============================================ -->
    <!-- CUSTOM DATE RANGE SECTION -->
    <!-- From date and To date fields -->
    <!-- ============================================ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tùy chọn khoảng thời gian"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#A5D6A7"
            android:layout_marginBottom="16dp" />

        <!-- From Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Từ ngày"
                android:textSize="13sp"
                android:textColor="#A5D6A7"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/ll_from_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#1A3A1A"
                android:padding="14dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_today"
                    android:tint="#4CAF50"
                    android:contentDescription="Calendar"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/tv_from_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="01/12/2024"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_menu_more"
                    android:tint="#A5D6A7"
                    android:rotation="90"
                    android:contentDescription="Select" />

            </LinearLayout>

        </LinearLayout>

        <!-- To Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đến ngày"
                android:textSize="13sp"
                android:textColor="#A5D6A7"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/ll_to_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#1A3A1A"
                android:padding="14dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_today"
                    android:tint="#4CAF50"
                    android:contentDescription="Calendar"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/tv_to_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="18/12/2024"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_menu_more"
                    android:tint="#A5D6A7"
                    android:rotation="90"
                    android:contentDescription="Select" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- ============================================ -->
    <!-- ACTION BUTTONS SECTION -->
    <!-- Apply and Reset buttons at bottom -->
    <!-- ============================================ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="#0A1E0A">

        <!-- Reset Button (Secondary) -->
        <Button
            android:id="@+id/btn_reset_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Đặt lại"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#1A3A1A"
            android:padding="14dp"
            android:minHeight="52dp"
            android:layout_marginEnd="12dp" />

        <!-- Apply Button (Primary) -->
        <Button
            android:id="@+id/btn_apply_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Áp dụng"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#4CAF50"
            android:padding="14dp"
            android:minHeight="52dp"
            android:layout_marginStart="12dp" />

    </LinearLayout>

</LinearLayout>

