<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:padding="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mua sắm - Giải trí - Đầu tư"
        android:textColor="@color/uihome_text_primary"
        android:textStyle="bold"
        android:textSize="14sp"
        android:paddingBottom="4dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="2"
        android:useDefaultMargins="false">

        <!-- QR Pay -->
        <androidx.cardview.widget.CardView
            android:id="@+id/uihome_action_qr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_qr_scanner"
                    android:tint="#4CAF50"
                    android:contentDescription="@string/qr_pay" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/qr_pay"
                    android:textColor="@color/uihome_text_primary"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="1dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Nạp tiền điện thoại -->
        <androidx.cardview.widget.CardView
            android:id="@+id/uihome_action_topup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_phone"
                    android:tint="#4CAF50"
                    android:contentDescription="@string/mobile_topup" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mobile_topup"
                    android:textColor="@color/uihome_text_primary"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="1dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Thẻ -->
        <androidx.cardview.widget.CardView
            android:id="@+id/uihome_action_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_card"
                    android:tint="#4CAF50"
                    android:contentDescription="@string/cards" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cards"
                    android:textColor="@color/uihome_text_primary"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="1dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tiết kiệm -->
        <androidx.cardview.widget.CardView
            android:id="@+id/uihome_action_saving"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_bank_logo"
                    android:tint="#4CAF50"
                    android:contentDescription="@string/savings" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/savings"
                    android:textColor="@color/uihome_text_primary"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="1dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Bảo hiểm (hàng thứ 2 - thêm marginTop để tách hàng) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/uihome_action_insurance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_person"
                    android:tint="#4CAF50"
                    android:contentDescription="@string/insurance" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/insurance"
                    android:textColor="@color/uihome_text_primary"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="1dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Thêm (hàng thứ 2 - thêm marginTop để tách hàng) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/uihome_action_more"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_more"
                    android:tint="#4CAF50"
                    android:contentDescription="@string/more_services" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/more_services"
                    android:textColor="@color/uihome_text_primary"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="1dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>
</LinearLayout>


