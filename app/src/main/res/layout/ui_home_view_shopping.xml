<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="2dp"
    android:padding="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiện ích - Mua sắm - Giải trí"
        android:textColor="@color/uihome_text_primary"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginStart="24dp"
        android:paddingBottom="8dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="2"
        android:useDefaultMargins="false">

        <!-- Data 4G/5G -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:gravity="top|center_horizontal"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/uihome_action_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_data"
                        android:tint="#4CAF50"
                        android:contentDescription="@string/data_4g_5g" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data_4g_5g"
                android:textColor="@color/uihome_text_primary"
                android:textSize="10sp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:maxLines="2"
                android:includeFontPadding="false"
                android:lineSpacingExtra="1dp" />
        </LinearLayout>

        <!-- Vé xem phim -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:gravity="top|center_horizontal"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/uihome_action_movie_tickets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_ticket"
                        android:tint="#4CAF50"
                        android:contentDescription="@string/movie_tickets" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/movie_tickets"
                android:textColor="@color/uihome_text_primary"
                android:textSize="10sp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:maxLines="2"
                android:includeFontPadding="false"
                android:lineSpacingExtra="1dp" />
        </LinearLayout>

        <!-- Taxi -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:gravity="top|center_horizontal"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/uihome_action_taxi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_taxi"
                        android:tint="#4CAF50"
                        android:contentDescription="@string/taxi" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/taxi"
                android:textColor="@color/uihome_text_primary"
                android:textSize="10sp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:maxLines="2"
                android:includeFontPadding="false"
                android:lineSpacingExtra="1dp" />
        </LinearLayout>

        <!-- Khách sạn -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:gravity="top|center_horizontal"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/uihome_action_hotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_hotel"
                        android:tint="#4CAF50"
                        android:contentDescription="@string/hotel" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hotel"
                android:textColor="@color/uihome_text_primary"
                android:textSize="10sp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:maxLines="2"
                android:includeFontPadding="false"
                android:lineSpacingExtra="1dp" />
        </LinearLayout>

        <!-- Tìm chi nhánh (đưa từ Dịch vụ sang) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:gravity="top|center_horizontal"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/uihome_action_locations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_location"
                        android:tint="#4CAF50"
                        android:contentDescription="@string/branch_locator" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/branch_locator"
                android:textColor="@color/uihome_text_primary"
                android:textSize="10sp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:maxLines="2"
                android:includeFontPadding="false"
                android:lineSpacingExtra="1dp" />
        </LinearLayout>

        <!-- Thanh toán hóa đơn (đưa từ Dịch vụ sang) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:gravity="top|center_horizontal"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/uihome_action_bill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_bill"
                        android:tint="#4CAF50"
                        android:contentDescription="@string/bill_payment" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bill_payment"
                android:textColor="@color/uihome_text_primary"
                android:textSize="10sp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:maxLines="2"
                android:includeFontPadding="false"
                android:lineSpacingExtra="1dp" />
        </LinearLayout>

        <!-- Nạp tiền điện thoại -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:gravity="top|center_horizontal"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/uihome_action_topup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_phone"
                        android:tint="#4CAF50"
                        android:contentDescription="@string/mobile_topup" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mobile_topup"
                android:textColor="@color/uihome_text_primary"
                android:textSize="10sp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:maxLines="2"
                android:includeFontPadding="false"
                android:lineSpacingExtra="1dp" />
        </LinearLayout>

        <!-- Máy bay -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:gravity="top|center_horizontal"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/uihome_action_flight_tickets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_airplane"
                        android:tint="#4CAF50"
                        android:contentDescription="@string/flight_tickets" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/flight_tickets"
                android:textColor="@color/uihome_text_primary"
                android:textSize="10sp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:maxLines="2"
                android:includeFontPadding="false"
                android:lineSpacingExtra="1dp" />
        </LinearLayout>

    </GridLayout>
</LinearLayout>


