<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="14dp"
    android:background="@color/background_color">

    <!-- Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/otp_verification"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/primary_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Description -->
    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/otp_description"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- OTP Input Container -->
    <LinearLayout
        android:id="@+id/ll_otp_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_description">

        <EditText
            android:id="@+id/et_otp_1"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textCursorDrawable="@drawable/cursor_green"
            android:background="@drawable/otp_edittext_background"
            android:importantForAutofill="no"/>

        <EditText
            android:id="@+id/et_otp_2"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textCursorDrawable="@drawable/cursor_green"
            android:background="@drawable/otp_edittext_background"
            android:importantForAutofill="no"/>

        <EditText
            android:id="@+id/et_otp_3"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textCursorDrawable="@drawable/cursor_green"
            android:background="@drawable/otp_edittext_background"
            android:importantForAutofill="no"/>

        <EditText
            android:id="@+id/et_otp_4"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textCursorDrawable="@drawable/cursor_green"
            android:background="@drawable/otp_edittext_background"
            android:importantForAutofill="no"/>

        <EditText
            android:id="@+id/et_otp_5"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textCursorDrawable="@drawable/cursor_green"
            android:background="@drawable/otp_edittext_background"
            android:importantForAutofill="no"/>

        <EditText
            android:id="@+id/et_otp_6"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textCursorDrawable="@drawable/cursor_green"
            android:background="@drawable/otp_edittext_background"
            android:importantForAutofill="no"/>
    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/ll_otp_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Timer -->
    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/resend_timer"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        app:layout_constraintTop_toBottomOf="@id/progress_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Verify Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_verify"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:text="@string/verify"
        android:textSize="16sp"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_timer"/>

    <!-- Resend Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_resend"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:text="@string/resend_otp"
        android:textSize="16sp"
        app:cornerRadius="8dp"
        app:strokeColor="@color/primary_color"
        app:strokeWidth="2dp"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:layout_constraintTop_toBottomOf="@id/btn_verify"/>

</androidx.constraintlayout.widget.ConstraintLayout>

