<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Chụp mặt sau CCCD"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Instruction -->
        <TextView
            android:id="@+id/tv_instruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Vui lòng chụp ảnh mặt sau của thẻ CCCD. Sau đó xem lại cả 2 ảnh và hoàn tất đăng ký."
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Front Card Preview -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_front_card"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/tv_instruction">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mặt trước"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="4dp"/>

                <ImageView
                    android:id="@+id/iv_front_card"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:background="@color/background_light"
                    android:contentDescription="Ảnh mặt trước CCCD"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_retake_front"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chụp lại mặt trước"
                    android:textSize="12sp"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="4dp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Back Card Preview -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_back_card"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/cv_front_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mặt sau"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="4dp"/>

                <ImageView
                    android:id="@+id/iv_back_card"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:background="@color/background_light"
                    android:contentDescription="Ảnh mặt sau CCCD"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_retake_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chụp lại mặt sau"
                    android:textSize="12sp"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="4dp"
                    android:layout_marginTop="4dp"
                    android:visibility="gone"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Capture Back Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_capture_back"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:text="Quét Mặt Sau CCCD Tự Động"
            android:textSize="16sp"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/cv_back_card"/>

        <!-- Complete Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_complete"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:text="Hoàn tất đăng ký"
            android:textSize="16sp"
            app:cornerRadius="8dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/btn_capture_back"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

