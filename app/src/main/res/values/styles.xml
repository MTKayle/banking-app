<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- OTP EditText Style -->
    <style name="OtpEditText">
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/otp_edittext_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- TextInputLayout hint luôn màu trắng -->
    <style name="WhiteHintTextInputLayout">
        <item name="hintTextColor">@android:color/white</item>
    </style>

    <!-- Hình tròn cho ShapeableImageView (avatar) -->
    <style name="CircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Bottom Sheet Dialog Theme -->
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Tab Text Style -->
    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
