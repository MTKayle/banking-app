<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MobileBanking"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">
        
        <!-- FileProvider for camera images -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Google Maps API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="YOUR_GOOGLE_MAPS_API_KEY_HERE" />

        <!-- Login Activity (Launcher) -->
        <activity
            android:name="com.example.mobilebanking.activities.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.MobileBanking">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Authentication Activities -->
        <activity
            android:name="com.example.mobilebanking.activities.MainRegistrationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.mobilebanking.activities.RegisterActivity"
            android:parentActivityName="com.example.mobilebanking.activities.LoginActivity" />

        <activity
            android:name="com.example.mobilebanking.activities.QrScannerActivity"
            android:parentActivityName="com.example.mobilebanking.activities.RegisterActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.example.mobilebanking.activities.CccdAutoScannerActivity"
            android:parentActivityName="com.example.mobilebanking.activities.MainRegistrationActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.example.mobilebanking.activities.CccdBackScannerActivity"
            android:parentActivityName="com.example.mobilebanking.activities.MainRegistrationActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.example.mobilebanking.activities.CccdCaptureActivity"
            android:parentActivityName="com.example.mobilebanking.activities.MainRegistrationActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.example.mobilebanking.activities.OtpVerificationActivity"
            android:parentActivityName="com.example.mobilebanking.activities.RegisterActivity" />

        <activity
            android:name="com.example.mobilebanking.activities.ForgotPasswordActivity"
            android:parentActivityName="com.example.mobilebanking.activities.LoginActivity" />

        <activity
            android:name="com.example.mobilebanking.activities.ForgotOtpVerificationActivity"
            android:parentActivityName="com.example.mobilebanking.activities.ForgotPasswordActivity" />

        <activity
            android:name="com.example.mobilebanking.activities.ResetPasswordActivity"
            android:parentActivityName="com.example.mobilebanking.activities.ForgotOtpVerificationActivity" />

        <activity
            android:name="com.example.mobilebanking.activities.BiometricAuthActivity"
            android:parentActivityName="com.example.mobilebanking.activities.LoginActivity" />

        <activity
            android:name="com.example.mobilebanking.activities.DataPreviewActivity"
            android:parentActivityName="com.example.mobilebanking.activities.MainRegistrationActivity"
            android:screenOrientation="portrait" />

        <!-- Dashboard Activities -->
        <activity
            android:name="com.example.mobilebanking.activities.CustomerDashboardActivity" />

        <!-- New BIDV-style Home UI Activity (frontend-only) -->
        <activity
            android:name="com.example.mobilebanking.ui_home.UiHomeActivity"
            android:exported="false"
            android:theme="@style/Theme.MobileBanking" />

        <activity
            android:name="com.example.mobilebanking.activities.OfficerDashboardActivity" />

        <!-- Account Activities -->
        <activity
            android:name="com.example.mobilebanking.activities.AccountDetailActivity"
            android:parentActivityName="com.example.mobilebanking.activities.CustomerDashboardActivity" />

        <!-- Transaction Activities -->
        <activity
            android:name="com.example.mobilebanking.activities.TransferActivity"
            android:parentActivityName="com.example.mobilebanking.activities.CustomerDashboardActivity" />

        <activity
            android:name="com.example.mobilebanking.activities.TransactionConfirmationActivity"
            android:parentActivityName="com.example.mobilebanking.activities.TransferActivity" />

        <activity
            android:name="com.example.mobilebanking.activities.TransferSuccessActivity"
            android:parentActivityName="com.example.mobilebanking.activities.CustomerDashboardActivity" />

        <activity
            android:name="com.example.mobilebanking.activities.TransactionHistoryActivity"
            android:parentActivityName="com.example.mobilebanking.activities.CustomerDashboardActivity" />

        <!-- Utility Services Activities -->
        <activity
            android:name="com.example.mobilebanking.activities.BillPaymentActivity"
            android:parentActivityName="com.example.mobilebanking.activities.CustomerDashboardActivity" />

        <activity
            android:name="com.example.mobilebanking.activities.BillPaymentSuccessActivity"
            android:parentActivityName="com.example.mobilebanking.activities.CustomerDashboardActivity" />

        <activity
            android:name="com.example.mobilebanking.activities.MoviePaymentActivity"
            android:parentActivityName="com.example.mobilebanking.activities.CustomerDashboardActivity" />

        <activity
            android:name="com.example.mobilebanking.activities.MobileTopUpActivity"
            android:parentActivityName="com.example.mobilebanking.activities.CustomerDashboardActivity" />

        <activity
            android:name="com.example.mobilebanking.activities.TicketBookingActivity"
            android:parentActivityName="com.example.mobilebanking.activities.CustomerDashboardActivity" />

        <activity
            android:name="com.example.mobilebanking.activities.HotelBookingActivity"
            android:parentActivityName="com.example.mobilebanking.activities.CustomerDashboardActivity" />

        <activity
            android:name="com.example.mobilebanking.activities.ServicesActivity"
            android:parentActivityName="com.example.mobilebanking.activities.CustomerDashboardActivity" />

        <!-- Map Activity -->
        <activity
            android:name="com.example.mobilebanking.activities.BranchLocatorActivity"
            android:parentActivityName="com.example.mobilebanking.activities.CustomerDashboardActivity" />

        <!-- Profile Activity -->
        <activity
            android:name="com.example.mobilebanking.activities.ProfileActivity"
            android:parentActivityName="com.example.mobilebanking.activities.CustomerDashboardActivity" />

        <!-- Welcome Banner Activity (Zalo-like intro screen) -->
        <activity
            android:name="com.example.mobilebanking.activities.WelcomeBannerActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>